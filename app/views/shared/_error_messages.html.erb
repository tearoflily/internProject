<% if @user.errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-danger">
      入力エラーが <%= @user.errors.count %>件ありました。
     </div> 
    <div class="col-md-12 offset-2">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>